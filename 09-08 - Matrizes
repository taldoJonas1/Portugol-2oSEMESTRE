4. CRIAR UMA MATRIZ 5x5 E MOSTRAR A DIAGONAL PRINCIPAL

programa
{
	
	funcao inicio()
	{
		inteiro mat[5][5], i, j 
		escreva("Leitura da matriz\n")
		para(i=0; i<5; i++){
			para(j=0; j<5; j++){
				escreva("Digite um valor para ", i+1, " ", j+1,": ")
				leia(mat[i][j])
			}
		}
		escreva("\nEscrita da Matriz\n")
		para(i=0; i<5; i++){
			para(j=0; j<5; j++){
				escreva(mat[i][j], " ")
			}
			escreva("\n")
		}

		escreva("\nDiagonal principal\n")
		para(i=0; i<5; i++){
			escreva(mat[i][i], " ")
		}
	}
}


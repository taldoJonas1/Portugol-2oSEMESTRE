1. CRIAR UMA MATRIZ 3x3

programa
{
	
	funcao inicio()
	{
		inteiro mat[3][3], i, j 
		escreva("Leitura da matriz\n")
		para(i=0; i<3; i++){
			para(j=0; j<3; j++){
				escreva("Digite um valor para ", i+1, " ", j+1,": ")
				leia(mat[i][j])
			}
		}
		escreva("\nEscrita da Matriz\n")
		para(i=0; i<3; i++){
			para(j=0; j<3; j++){
				escreva(mat[i][j], " ")
			}
			escreva("\n")
		}
	}
}

==============================================================================================================

2. LER A SOMA DOS ELEMENTOS DA MATRIZ 3x3

programa
{
	
	funcao inicio()
	{
		inteiro mat[3][3], i, j, soma
		soma = 0
		escreva("Leitura da matriz\n")
		para(i=0; i<3; i++){
			para(j=0; j<3; j++){
				escreva("Digite um valor para ", i+1, " ", j+1,": ")
				leia(mat[i][j])
				soma = soma + mat[i][j]
			}
		}
		escreva("\nEscrita da Matriz\n")
		para(i=0; i<3; i++){
			para(j=0; j<3; j++){
				escreva(mat[i][j], " ")
			}
			escreva("\n")
		}
		escreva("\nA soma dos elementos da matriz é: ", soma)
	}
}

==============================================================================================================

3. CRIAR DUAS MATRIZES E SOMÁ-LAS, GERANDO UMA TERCEIRA MATRIZ

programa
{
	
	funcao inicio()
	{
		inteiro mat1[3][3], i, j, mat2[3][3], mat3[3][3]
		escreva("Leitura da primeira matriz\n")
		para(i=0; i<3; i++){
			para(j=0; j<3; j++){
				escreva("Digite um valor para ", i+1, " ", j+1,": ")
				leia(mat1[i][j])
			}
		}
		escreva("\nEscrita da Matriz\n")
		para(i=0; i<3; i++){
			para(j=0; j<3; j++){
				escreva(mat1[i][j], " ")
			}
			escreva("\n")
		}

		escreva("\nLeitura da segunda matriz\n")
		para(i=0; i<3; i++){
			para(j=0; j<3; j++){
				escreva("Digite um valor para ", i+1, " ", j+1,": ")
				leia(mat2[i][j])
			}
		}
		escreva("\nEscrita da Matriz\n")
		para(i=0; i<3; i++){
			para(j=0; j<3; j++){
				escreva(mat2[i][j], " ")
			}
			escreva("\n")
		}

		escreva("\nMatriz resultante da soma das duas outras\n")
		para(i=0; i<3; i++){
			para(j=0; j<3; j++){
				mat3[i][j] = mat1[i][j] + mat2[i][j]
				escreva(mat3[i][j], " ")
			}
			escreva("\n")
		}
	}
}

